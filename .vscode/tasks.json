{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build (g++) active file",
            "command": "/usr/bin/g++",
            "args": [
                "-Wall",
                "-Werror",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build $file${fileBasename}"
        }
    ],
    "version": "2.0.0"
}